{
    "version": "23.05.01",
    "description": "A feature-rich dictionary lookup program",
    "homepage": "https://github.com/xiaoyifang/goldendict-ng",
    "license": "GPL-3.0-only",
    "url": "https://github.com/xiaoyifang/goldendict-ng/releases/download/v23.05.01-WuYi.230501.6c8b0c1c/6.4.3-GoldenDict.exe_windows-2022_20230501.zip",
    "hash": "da22eeee3c8d18e5b7b4c7ae0e539071b84245a594fa229addd67c68a3b17237",
    "pre_install": [
        "$main_dir = $(Get-ChildItem -Include \"GoldenDict*\" -Name -Path $dir)",
        "Move-Item $dir/$main_dir/* $dir",
        "Remove-Item -Recurse -Force -ErrorAction SilentlyContinue -Path $dir/$main_dir"
    ],
    "post_install": [
        "& \"$bucketsdir\\jade\\scripts\\persist_extra_appdata.ps1\" \"${env:APPDATA}\\GoldenDict\" -name \"Roaming\\GoldenDict\""
    ],
    "bin": "GoldenDict.exe",
    "shortcuts": [
        [
            "GoldenDict.exe",
            "GoldenDict"
        ]
    ],
    "persist": "content",
    "uninstaller": {
        "script": [
            "function remove_link($dir) {",
            "    write-host \"Unlinking $dir\"",
            "    $source = (Get-Item -Path $dir -Force)",
            "    if ($source.LinkType) {",
            "        $source_path = $source.FullName",
            "        # directory (junction)",
            "        if ($source -is [System.IO.DirectoryInfo]) {",
            "            # remove read-only attribute on the link",
            "            attrib -R /L $source_path",
            "            # remove the junction",
            "            Remove-Item -Path $source_path -Recurse -Force -ErrorAction SilentlyContinue",
            "        } else {",
            "            # remove the hard link",
            "            Remove-Item -Path $source_path -Force -ErrorAction SilentlyContinue",
            "        }",
            "    }",
            "}",
            "remove_link \"${env:APPDATA}\\GoldenDict\""
        ]
    },
    "checkver": {
        "github": "https://github.com/xiaoyifang/goldendict-ng",
        "regex": "/releases/tag/(?:v|V)(?<version>[\\d.]+)-(?<patch>[\\da-zA-Z.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/xiaoyifang/goldendict-ng/releases/download/v$version-$matchPatch/6.4.3-GoldenDict.exe_windows-2022_20$cleanVersion.zip",
        "hash": {
            "mode": "download"
        }
    }
}
