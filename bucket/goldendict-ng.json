    "hash": "df02bce053f4f6ce011143b949d8e2f97ef2f39612dc5336159ee5202d28ef64",
    "pre_install": [
        "$main_dir = $(Get-ChildItem -Include \"GoldenDict*\" -Name -Path $dir)",
        "Move-Item $dir/$main_dir/* $dir",
        "Remove-Item -Recurse -Force -ErrorAction SilentlyContinue -Path $dir/$main_dir"
    ],
    "post_install": "& \"$bucketsdir\\jade\\scripts\\persist_extra_appdata.ps1\" \"${env:APPDATA}\\GoldenDict\" -name \"Roaming\\GoldenDict\"",
    "bin": "GoldenDict.exe",
    "shortcuts": [
        [
            "GoldenDict.exe",
            "GoldenDict"
        ]
    ],
    "persist": "content",
    "uninstaller": {
        "script": [
            "function remove_link($dir) {",
            "    write-host \"Unlinking $dir\"",
            "    $source = (Get-Item -Path $dir -Force)",
            "    if ($source.LinkType) {",
            "        $source_path = $source.FullName",
            "        # directory (junction)",
            "        if ($source -is [System.IO.DirectoryInfo]) {",
            "            # remove read-only attribute on the link",
            "            attrib -R /L $source_path",
            "            # remove the junction",
            "            Remove-Item -Path $source_path -Recurse -Force -ErrorAction SilentlyContinue",
            "        } else {",
            "            # remove the hard link",
            "            Remove-Item -Path $source_path -Force -ErrorAction SilentlyContinue",
            "        }",
            "    }",
            "}",
            "remove_link \"${env:APPDATA}\\GoldenDict\""
        ]
    },
    "checkver": {
        "url": "https://github.com/xiaoyifang/goldendict-ng/releases",
        "regex": "GoldenDict-ng-v[\\d.]+-([\\da-zA-Z.]+)"
    },
    "autoupdate": {
        "url": "https://github.com/xiaoyifang/goldendict-ng/releases/download/tag-$majorVersion.$patchVersion/6.5.1-GoldenDict.exe_windows-2019_20$minorVersion.zip",
        "hash": {
            "mode": "download"
        }
    }
}
