{
    "version": "6.0.8",
    "description": "Open-source reference management software to manage bibliographic data and related research materials.",
    "homepage": "https://www.zotero.org/",
    "license": "AGPL-3.0-only",
    "url": "https://download.zotero.org/client/release/6.0.8/Zotero-6.0.8_setup.exe#/dl.7z",
    "hash": "29bef2ad9c09f30496a2bcc928e397be8034174123e1dee28e67714bc9fb59bd",
    "extract_dir": "core",
    "post_install": [
        "& \"$bucketsdir\\jade\\scripts\\keep_extra_persist.ps1\" \"${env:APPDATA}\\Zotero\" -name \"Roaming\\Zotero\"",
        "& \"$bucketsdir\\jade\\scripts\\keep_extra_persist.ps1\" \"${env:LOCALAPPDATA}\\Zotero\" -name \"Local\\Zotero\"",
        "& \"$bucketsdir\\jade\\scripts\\keep_extra_persist.ps1\" \"${env:USERPROFILE}\\Zotero\" -name \"Zotero\""
    ],
    "bin": "zotero.exe",
    "shortcuts": [
        [
            "zotero.exe",
            "Zotero"
        ]
    ],
    "uninstaller": {
        "script": [
            "function is_link($dir) {",
            "    $linktype = (Get-Item -Path $dir -Force).LinkType",
            "    ($linktype -eq \"Junction\") -or ($linktype -eq \"HardLink\")",
            "}",
            "if (is_link \"${env:APPDATA}\\Zotero\") {",
            "    Remove-Item \"${env:APPDATA}\\Zotero\" -Force -Recurse",
            "}",
            "if (is_link \"${env:LOCALAPPDATA}\\Zotero\") {",
            "    Remove-Item \"${env:LOCALAPPDATA}\\Zotero\" -Force -Recurse",
            "}"
        ]
    },
    "checkver": {
        "url": "https://www.zotero.org/download/client/update/5.0.0/_/WINNT_x86-msvc/en-US/release/_/update.xml",
        "xpath": "/updates/update/@appVersion"
    },
    "autoupdate": {
        "url": "https://download.zotero.org/client/release/$version/Zotero-$version_setup.exe#/dl.7z",
        "hash": {
            "mode": "download"
        }
    }
}
