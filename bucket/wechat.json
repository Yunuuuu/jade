    "description": "Instant messaging app by Tencent",
    "homepage": "https://pc.weixin.qq.com/",
    "license": {
        "identifier": "EULA",
        "url": "https://weixin.qq.com/cgi-bin/readtemplate?lang=zh_CN&t=weixin_agreement&s=default"
    },
    "url": "https://dldir1.qq.com/weixin/Windows/WeChatSetup.exe#/dl.7z",
    "hash": "749753d77418666f4f76a107fbf38cfbc8f7df9d19ff0e5218b03a02a6122583",
    "installer": {
        "script": "Remove-Item \"$dir\\`$PLUGINSDIR\" -Force -Recurse"
    },
    "post_install": [
        "& \"$bucketsdir\\jade\\scripts\\persist_extra_appdata.ps1\" \"${env:APPDATA}\\Tencent\\WeChat\" -name \"Roaming\\Tencent\\WeChat\"",
        "& \"$bucketsdir\\jade\\scripts\\persist_extra_appdata.ps1\" \"${env:APPDATA}\\Tencent\\WeChatApp\" -name \"Roaming\\Tencent\\WeChatApp\"",
        "& \"$bucketsdir\\jade\\scripts\\persist_extra_appdata.ps1\" \"${env:USERPROFILE}\\Documents\\WeChat Files\" -name \"Documents\\WeChat Files\""
    ],
    "shortcuts": [
        [
            "wechat.exe",
            "WeChat"
        ]
    ],
    "uninstaller": {
        "script": [
            "function remove_link($dir) {",
            "    write-host \"Unlinking $dir\"",
            "    $source = (Get-Item -Path $dir -Force)",
            "    if ($source.LinkType) {",
            "        $source_path = $source.FullName",
            "        # directory (junction)",
            "        if ($source -is [System.IO.DirectoryInfo]) {",
            "            # remove read-only attribute on the link",
            "            attrib -R /L $source_path",
            "            # remove the junction",
            "            Remove-Item -Path $source_path -Recurse -Force -ErrorAction SilentlyContinue",
            "        } else {",
            "            # remove the hard link",
            "            Remove-Item -Path $source_path -Force -ErrorAction SilentlyContinue",
            "        }",
            "    }",
            "}",
            "remove_link \"${env:APPDATA}\\Tencent\\WeChat\"",
            "remove_link \"${env:APPDATA}\\Tencent\\WeChatApp\"",
            "remove_link \"${env:USERPROFILE}\\Documents\\WeChat Files\"",
            "if (Test-Path \"$bucketsdir\\jade\\config\\wechat\\wechat-uninstall-context.reg\") {",
            "    reg import \"$bucketsdir\\jade\\config\\wechat\\wechat-uninstall-context.reg\"",
            "}",
            "if (-not (Test-Path -Path \"${env:APPDATA}\\Tencent\\*\")) {",
            "    Remove-Item \"${env:APPDATA}\\Tencent\" -Force -Recurse",
            "}"
        ]
    },
    "checkver": {
        "url": "https://pc.weixin.qq.com/",
        "regex": "(\\d+\\.\\d+\\.\\d+)"
    },
    "autoupdate": {
        "url": "https://dldir1.qq.com/weixin/Windows/WeChatSetup.exe#/dl.7z",
        "hash": {
            "mode": "download"
        }
    }
}
