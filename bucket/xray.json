            "hash": "f932f83870bb539b9bd075540142c7a9e1a8ababb4fc1460fd2098fa491b89dc"
        },
        "32bit": {
            "url": "https://github.com/XTLS/Xray-core/releases/download/v1.8.24/Xray-windows-32.zip",
            "hash": "16aaf11d4da3703452b509681eaaa8320fa9af5c8a9c4242bbc385f52fbb0740"
        }
    },
    "pre_install": [
        "if (!(test-path $persist_dir)) { New-Item -type directory $persist_dir > $null }",
        "if (!(Test-Path \"$persist_dir\\config.json\")) {",
        "    Set-Content \"$dir\\config.json\" '{}' -Encoding 'Ascii'",
        "}"
    ],
    "bin": [
        "xray.exe",
        "wxray.exe"
    ],
    "persist": "config.json",
    "checkver": {
        "github": "https://github.com/XTLS/Xray-core"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://github.com/XTLS/Xray-core/releases/download/v$version/Xray-windows-64.zip"
            },
            "32bit": {
                "url": "https://github.com/XTLS/Xray-core/releases/download/v$version/Xray-windows-32.zip"
            }
        },
        "hash": {
            "url": "$url.dgst",
            "find": "SHA2-256=\\s*([a-fA-F\\d]{64})"
        }
    }
}
