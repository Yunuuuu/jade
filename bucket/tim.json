{
    "version": "3.4.6.22074",
    "description": "tencent TIM, lightweight alternative to QQ",
    "homepage": "https://tim.qq.com/",
    "license": {
        "identifier": "Unknown",
        "url": "https://tim.qq.com/support.html"
    },
    "url": "http://dldir1.qq.com/qqfile/qq/TIM3.4.6/TIM3.4.6.22074.exe#/TimSetup.exe",
    "hash": "3492424e5a7e168b140eb07dc708be25082f3ce34cdfabc4a254191fddb5a3ab",
    "pre_install": [
        "if (!(Test-Path \"$persist_dir\")) {",
        "    New-Item -Path \"$persist_dir\" -ItemType Directory | Out-Null",
        "}"
    ],
    "installer": {
        "script": [
            "Start-Process -Wait -WindowStyle Hidden cmd \"/c call `\"$dir\\TimSetup.exe`\" -s\" -Verb RunAs",
            "Remove-Item \"$dir\\TimSetup.exe\""
        ]
    },
    "post_install": [
        "Copy-Item -Path \"C:\\Program Files (x86)\\Tencent\\TIM\\TIMUninst.exe\" \"$dir\\TIMUninst.exe\"",
        "'DeskUpdate', 'IM', 'libsdk', 'Logs', 'QQ', 'QQTempSys', 'QQDoctor', 'QQLive', 'Tencentdl', 'TIM', 'TXSSO', 'Users' | ForEach-Object {",
        "    & \"$bucketsdir\\jade\\scripts\\keep_global_persist.ps1\" \"${env:APPDATA}\\Tencent\\$_\" -name \"Roaming\\Tencent\\$_\"",
        "}",
        "& \"$bucketsdir\\jade\\scripts\\keep_global_persist.ps1\" \"${env:LOCALAPPDATA}\\Tencent\\MiniBrowser\" -name \"Local\\Tencent\\MiniBrowser\"",
        "& \"$bucketsdir\\jade\\scripts\\keep_global_persist.ps1\" \"${env:USERPROFILE}\\Documents\\Tencent Files\" -name \"Documents\\Tencent Files\"",
        "Remove-Item \"C:\\Users\\Public\\Desktop\\TIM.lnk\""
    ],
    "uninstaller": {
        "script": [
            "Start-Process -Wait -WindowStyle Hidden cmd \"/c call `\"$dir\\TIMUninst.exe`\" -s\" -Verb RunAs",
            "Remove-Item \"C:\\Program Files (x86)\\Tencent\\TIM\" -Force -Recurse",
            "if (-not (Test-Path -Path \"C:\\Program Files (x86)\\Tencent\\*\")) {",
            "    Remove-Item \"C:\\Program Files (x86)\\Tencent\" -Force -Recurse",
            "}",
            "function remove_link($dir) {",
            "    write-host \"Unlinking $dir\"",
            "    $source = (Get-Item -Path $dir -Force)",
            "    if ($source.LinkType) {",
            "        $source_path = $source.FullName",
            "        # directory (junction)",
            "        if ($source -is [System.IO.DirectoryInfo]) {",
            "            # remove read-only attribute on the link",
            "            attrib -R /L $source_path",
            "            # remove the junction",
            "            Remove-Item -Path $source_path -Recurse -Force -ErrorAction SilentlyContinue",
            "        } else {",
            "            # remove the hard link",
            "            Remove-Item -Path $source_path -Force -ErrorAction SilentlyContinue",
            "        }",
            "    }",
            "}",
            "'DeskUpdate', 'IM', 'libsdk', 'Logs', 'QQ', 'QQTempSys', 'QQDoctor', 'QQLive', 'Tencentdl', 'TIM', 'TXSSO', 'Users' | ForEach-Object {",
            "    remove_link \"${env:APPDATA}\\Tencent\\$_\"",
            "}",
            "remove_link \"${env:LOCALAPPDATA}\\Tencent\\MiniBrowser\"",
            "remove_link \"${env:USERPROFILE}\\Documents\\Tencent Files\"",
            "if (Test-Path -Path \"${env:APPDATA}\\Tencent\\QQCalllb.exe\") {",
            "    Remove-Item \"${env:APPDATA}\\Tencent\\QQCalllb.exe\" -Force",
            "}",
            "if (-not (Test-Path -Path \"${env:APPDATA}\\Tencent\\*\")) {",
            "    Remove-Item \"${env:APPDATA}\\Tencent\" -Force -Recurse",
            "}",
            "if (-not (Test-Path -Path \"${env:LOCALAPPDATA}\\Tencent\\*\")) {",
            "    Remove-Item \"${env:LOCALAPPDATA}\\Tencent\" -Force -Recurse",
            "}"
        ]
    },
    "checkver": {
        "url": "https://im.qq.com/rainbow/TIMDownload/",
        "regex": "\"pcLink\":\"https?://dldir1\\.qq\\.com/qqfile/qq(?<extra>.*)/TIM(?<main>\\d+\\.\\d+\\.\\d+)/TIM.*\\.(?<patch>\\d+)\\.exe",
        "replace": "${main}.${patch}"
    },
    "autoupdate": {
        "url": "http://dldir1.qq.com/qqfile/qq$matchExtra/TIM$matchMain/TIM$version.exe#/TimSetup.exe",
        "hash": {
            "mode": "download"
        }
    }
}
