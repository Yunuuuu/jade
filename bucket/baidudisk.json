    "pre_install": "Remove-Item -R -Path \"$dir\\`$TEMP\",\"$dir\\`$PLUGINSDIR\"",
    "post_install": [
        "& \"$bucketsdir\\jade\\scripts\\keep_extra_persist.ps1\" \"${env:APPDATA}\\Baidu\\BaiduYunKernel\" -name \"Roaming\\Baidu\\BaiduYunKernel\"",
        "& \"$bucketsdir\\jade\\scripts\\keep_extra_persist.ps1\" \"${env:APPDATA}\\BaiduYunGuanjia\" -name \"Roaming\\BaiduYunGuanjia\"",
        "& \"$bucketsdir\\jade\\scripts\\keep_extra_persist.ps1\" \"${env:APPDATA}\\BaiduYunKernel\" -name \"Roaming\\BaiduYunKernel\"",
        "& \"$bucketsdir\\jade\\scripts\\keep_extra_persist.ps1\" \"${env:APPDATA}\\PLogs\" -name \"Roaming\\PLogs\""
    ],
    "shortcuts": [
        [
            "BaiduNetdisk.exe",
            "Baidu Netdisk"
        ]
    ],
    "persist": "users",
    "uninstaller": {
        "script": [
            "function is_link($dir) {",
            "    $linktype = (Get-Item -Path $dir -Force).LinkType",
            "    ($linktype -eq \"Junction\") -or ($linktype -eq \"HardLink\")",
            "}",
            "if (is_link \"${env:APPDATA}\\Baidu\\BaiduYunKernel\") {",
            "    Remove-Item \"${env:APPDATA}\\Baidu\\BaiduYunKernel\" -Force -Recurse",
            "}",
            "if (is_link \"${env:APPDATA}\\BaiduYunGuanjia\") {",
            "    Remove-Item \"${env:APPDATA}\\BaiduYunGuanjia\" -Force -Recurse",
            "}",
            "if (is_link \"${env:APPDATA}\\BaiduYunKernel\") {",
            "    Remove-Item \"${env:APPDATA}\\BaiduYunKernel\" -Force -Recurse",
            "}",
            "if (is_link \"${env:APPDATA}\\PLogs\") {",
            "    Remove-Item \"${env:APPDATA}\\PLogs\" -Force -Recurse",
            "}",
            "if (-not (Test-Path -Path \"${env:APPDATA}\\Baidu\\*\")) {",
            "    Remove-Item \"${env:APPDATA}\\Baidu\" -Force -Recurse",
            "}"
        ]
    },
    "checkver": {
        "url": "http://pan.baidu.com/disk/cmsdata?do=client",
        "regex": "\\\\/yunguanjia\\\\/(?<name>Baidu[\\w]+_)(\\d+\\.\\d+\\.\\d+\\.\\d+)\\.exe"
