{
    "version": "121.0",
    "description": "Popular open source web browser.",
    "homepage": "https://www.mozilla.org/firefox/",
    "license": "MPL-2.0",
    "architecture": {
        "64bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/121.0/win64/en-US/Firefox%20Setup%20121.0.exe#/dl.7z",
            "hash": "sha512:4bd396ae14d1b1bb73477b77253454a37c1fcbf31fb0a52cb4b365fa635ec715356eabfaa396f2861305e41714ee42ca1346fa693c20b8c6f0be5309334d9b84"
        },
        "32bit": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/121.0/win32/en-US/Firefox%20Setup%20121.0.exe#/dl.7z",
            "hash": "sha512:55e41ecee972d0919f3d06a43edb8f9366f17bcc4f84da3a932873189a8fa90c0b28fd5f6d921f46837794a8b9f6444c2fadca8cea55f05ba271c57f4922831d"
        },
        "arm64": {
            "url": "https://archive.mozilla.org/pub/firefox/releases/121.0/win64-aarch64/en-US/Firefox%20Setup%20121.0.exe#/dl.7z",
            "hash": "sha512:64a942fd9b2257ef6900f0a52bd84bb1e3722b48de380aff3f2aa337d31e869a822d2e7d80069bd72d9445b813c0400d2d1a4a70f6032b99bda0bed9acf83e27"
        }
    },
    "extract_dir": "core",
    "bin": "firefox.exe",
    "shortcuts": [
        [
            "firefox.exe",
            "Firefox"
        ],
        [
            "firefox.exe",
            "Firefox Profile Manager",
            "-P"
        ]
    ],
    "persist": [
        "distribution",
        "profile"
    ],
    "post_install": [
        "& \"$bucketsdir\\jade\\scripts\\persist_extra_appdata.ps1\" \"${env:APPDATA}\\Mozilla\\Firefox\" -name \"Roaming\\Mozilla\\Firefox\"",
        "& \"$bucketsdir\\jade\\scripts\\persist_extra_appdata.ps1\" \"${env:LOCALAPPDATA}\\Mozilla\\Firefox\" -name \"Local\\Mozilla\\Firefox\"",
        "if (!(Test-Path \"$persist_dir\\Roaming\\Mozilla\\Firefox\\profiles.ini\")) {",
        "    $profile_ini = Get-Content \"$bucketsdir\\jade\\config\\firefox\\profiles.ini\"",
        "    $profile_ini = $profile_ini.Replace('$persist_dir', $persist_dir)",
        "    Set-Content -Path \"$persist_dir\\Roaming\\Mozilla\\Firefox\\profiles.ini\" -value $profile_ini",
        "    firefox -browser -foreground -P Scoop",
        "}"
    ],
    "uninstaller": {
        "script": [
            "function remove_link($dir) {",
            "    write-host \"Unlinking $dir\"",
            "    $source = (Get-Item -Path $dir -Force)",
            "    if ($source.LinkType) {",
            "        $source_path = $source.FullName",
            "        # directory (junction)",
            "        if ($source -is [System.IO.DirectoryInfo]) {",
            "            # remove read-only attribute on the link",
            "            attrib -R /L $source_path",
            "            # remove the junction",
            "            Remove-Item -Path $source_path -Recurse -Force -ErrorAction SilentlyContinue",
            "        } else {",
            "            # remove the hard link",
            "            Remove-Item -Path $source_path -Force -ErrorAction SilentlyContinue",
            "        }",
            "    }",
            "}",
            "remove_link \"${env:APPDATA}\\Mozilla\\Firefox\"",
            "remove_link \"${env:LOCALAPPDATA}\\Mozilla\\Firefox\""
        ]
    },
    "checkver": {
        "url": "https://www.mozilla.org/en-US/firefox/notes/",
        "regex": "<div class=\"c-release-version\">([\\d.]+)</div>"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64/en-US/$basename"
                }
            },
            "32bit": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win32/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win32/en-US/$basename"
                }
            },
            "arm64": {
                "url": "https://archive.mozilla.org/pub/firefox/releases/$version/win64-aarch64/en-US/Firefox%20Setup%20$version.exe#/dl.7z",
                "hash": {
                    "url": "https://archive.mozilla.org/pub/firefox/releases/$version/SHA512SUMS",
                    "regex": "$sha512\\s+win64-aarch64/en-US/$basename"
                }
            }
        }
    }
}
